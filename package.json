{
  "name": "trainquery",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf -g dist/ data-*/",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "dev": "npm run build-server-dev && run-p build-server-watch \"start-watch -- {@}\" --",
    "build": "run-p type-check build-only build-server",
    "build-server": "esbuild server/main.ts --bundle --platform=node --external:vite-ssr --minify --outfile=dist/server.js",
    "build-server-dev": "esbuild server/main.ts --bundle --platform=node --external:vite-ssr --outfile=dist/server.js",
    "build-server-watch": "esbuild server/main.ts --bundle --platform=node --external:vite-ssr --watch --outfile=dist/server.js",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start-watch": "nodemon dist/server.js",
    "test": "vitest",
    "build-only": "vite-ssr build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "npm run lint-eslint && npm run lint-tsc",
    "lint-eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint-tsc": "tsc --project server/tsconfig.json --noemit && tsc --project shared/tsconfig.json --noemit",
    "format": "prettier --write src --write server --write shared",
    "pretqlint": "esbuild server/linter/main.ts --bundle --platform=node --minify --outfile=dist/lint.js",
    "tqlint": "node dist/lint.js"
  },
  "dependencies": {
    "@schel-d/js-utils": "^1.0.2",
    "@vueuse/head": "^0.9.8",
    "adm-zip": "^0.5.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.1",
    "pinia": "^2.1.3",
    "vite-ssr": "^0.17.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2",
    "yaml": "^2.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/adm-zip": "^0.5.0",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.17",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.13",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "typescript": "~5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.32.0",
    "vue-tsc": "^1.6.5"
  },
  "engines": {
    "node": ">=18"
  }
}
