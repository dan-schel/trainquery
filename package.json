{
  "name": "trainquery",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf -g dist/ data-*/ coverage/",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "dev": "tsx watch server/main.ts",
    "build": "vite-ssr build",
    "start": "cross-env NODE_ENV=production tsx server/main.ts",
    "test": "vitest --run",
    "test-coverage": "vitest --run --coverage",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "npm run lint-eslint && npm run lint-tsc && npm run type-check",
    "lint-eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --max-warnings 0",
    "lint-tsc": "tsc --project server/tsconfig.json --noemit && tsc --project shared/tsconfig.json --noemit",
    "format": "prettier --write src --write server --write shared --write tests",
    "tqlint": "tsx server/linter/main.ts"
  },
  "dependencies": {
    "@dan-schel/js-utils": "4.2.0",
    "@vueuse/head": "0.9.8",
    "adm-zip": "0.5.16",
    "chalk": "5.4.1",
    "csv-parser": "3.2.0",
    "dotenv": "16.5.0",
    "express": "4.21.2",
    "glob": "11.0.3",
    "long": "5.3.2",
    "luxon": "3.6.1",
    "mongodb": "6.17.0",
    "node-fetch": "3.3.2",
    "protobufjs": "7.5.3",
    "vite-ssr": "0.17.2",
    "vue": "3.5.17",
    "vue-router": "4.5.1",
    "yaml": "2.8.0",
    "zod": "3.25.64"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.11.0",
    "@tsconfig/node18": "18.2.4",
    "@types/adm-zip": "0.5.7",
    "@types/express": "4.17.23",
    "@types/jsdom": "21.1.7",
    "@types/luxon": "3.6.2",
    "@types/node": "22.15.33",
    "@vitejs/plugin-vue": "4.6.2",
    "@vitejs/plugin-vue-jsx": "3.1.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/eslint-config-prettier": "7.1.0",
    "@vue/eslint-config-typescript": "11.0.3",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-plugin-vue": "9.33.0",
    "jsdom": "26.1.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.1",
    "rimraf": "6.0.1",
    "sass": "1.89.2",
    "sass-loader": "16.0.5",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vite": "4.5.14",
    "vite-plugin-pwa": "1.0.0",
    "vitest": "3.2.4",
    "vue-tsc": "2.2.10"
  },
  "engines": {
    "node": "22.17.0"
  }
}
